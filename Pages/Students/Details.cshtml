@page
@model StudentRegistration.Pages.Students.DetailsModel
@{
    ViewData["Title"] = "Details";
}
<h3>@ViewData["Title"]</h3>
<hr />
<div class="row shadow">
    <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Students.Name" class="control-label"></label>
                <input asp-for="Students.Name" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Students.Email" class="control-label"></label>
                <input asp-for="Students.Email" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Students.Contact" class="control-label"></label>
                <input asp-for="Students.Contact" class="form-control"readonly />
            </div>
            <div class="form-group">
                <label asp-for="Students.Course" class="control-label"></label>
                <input asp-for="Students.Course" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Students.Age" class="control-label"></label>
                <input asp-for="Students.Age" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Students.Gender" class="control-label"></label>
                <input asp-for="Students.Gender" class="form-control" readonly/>
            </div>
        <div class="form-group mt-2">
            <a class="btn btn-primary" asp-page="Index">Students List</a>
        </div>
    </div>
</div>