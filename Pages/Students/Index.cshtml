@page
@model StudentRegistration.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Student List";
}
<h3>@ViewData["Title"]</h3>
<hr />
<p>
    <a asp-page="Create" class="btn btn-primary">Create</a>
</p>
<table class="table table-success table-striped table-responsive table-hover shadow">
    <thead class="table-dark">
        <tr>
            <th> 
                @Html.DisplayNameFor(model => model.StudentsList[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentsList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentsList[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentsList[0].Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentsList[0].Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentsList[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentsList[0].Gender)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.StudentsList.Any())
        {
            @foreach(var student in Model.StudentsList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(item => student.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(item => student.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(item => student.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(item => student.Contact)
                    </td>
                    <td>
                        @Html.DisplayFor(item => student.Course)
                    </td>
                    <td>
                        @Html.DisplayFor(item => student.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(item => student.Gender)
                    </td>
                    <td>
                        <a asp-page ="./Edit" asp-route-itmeid ="@student.Id" class="btn btn-primary">Edit</a>
                        <a asp-page="./Details" asp-route-itmeid="@student.Id" class="btn btn-success">Details</a>
                        <a asp-page="./Delete" asp-route-itmeid="@student.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">
                    Students are Not Found!!
                </td>
            </tr>
            
        }
    </tbody>
</table>